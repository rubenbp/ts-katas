{
  "name": "ts-katas",
  "version": "1.0.0",
  "description": "Boilerplate with typescript, jest, eslint & prettier to write katas",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "jest",
    "posttest": "npm run format",
    "test:watch": "jest --watchAll",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,js}\""
  },
  "keywords": [],
  "author": "Rubén Bernárdez",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^26.0.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "prettier --write"
  }
}
